{
  "manifest_version": 3,
  "name": "Snapshot it",
  "version": "1.0",
  "description": "Take a snapshot of the selected area on a webpage.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "logo.png",
      "32": "logo.png",
      "48": "logo.png",
      "128": "logo.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "web_accessible_resources": [
    "popup.html",
    "popup.js",
    "popup.css",
    "icons/*"
  ]
}
